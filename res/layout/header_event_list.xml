<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/eventlist_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_NAPWr"
        android:gravity="right"
        android:paddingBottom="17sp"
        android:paddingRight="20sp"
        android:paddingTop="17sp"
        android:shadowColor="@color/shadow_blue"
        android:shadowDx="0"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/event_list_name"
        android:textColor="@color/text_white"
        android:textSize="25sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/default_margin_small"
        android:layout_below="@+id/eventlist_title" />

</RelativeLayout>