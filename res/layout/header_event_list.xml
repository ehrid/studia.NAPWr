<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_NAPWr"
    android:gravity="center_vertical|right" >

    <ImageView
        android:id="@+id/eventlist_miniature"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginLeft="114dp"
        android:src="@drawable/miniature_top10" />

    <TextView
        android:id="@+id/eventlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="17sp"
        android:paddingRight="20sp"
        android:paddingTop="17sp"
        android:shadowColor="@color/shadow_blue"
        android:shadowDx="0"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="@string/event_list_name"
        android:textColor="@color/text_white"
        android:textSize="25sp" />

</LinearLayout>