<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/first_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="21dp"
            android:layout_height="24dp"
            android:src="@drawable/liked_star" />

        <TextView
            android:id="@+id/event_list_item_like_sum"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:text="Suma lików" />

        <TextView
            android:id="@+id/event_list_item_start_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Data początku" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/stroke_size"
            android:background="@color/background_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/event_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_row"
        android:text="Nazwa wydarzenia" />

    <RelativeLayout
        android:id="@+id/bottom_row"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_list_item_name"
         >

        <WebView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/webview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/event_list_item_content" />

        <TextView
            android:id="@+id/event_list_item_content"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Treść wydarzenia" 
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>