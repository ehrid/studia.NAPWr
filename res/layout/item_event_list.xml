<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/stroke_size"
        android:background="@color/background_gray" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/first_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/event_list_item_button_star"
            android:layout_width="@dimen/event_list_item_button_star_width"
            android:layout_height="@dimen/event_list_item_button_star_height"
            android:src="@drawable/liked_star" />

        <TextView
            android:id="@+id/event_list_item_like_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_weight="0.18"
            android:text="S" />

        <TextView
            android:id="@+id/event_list_item_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.73"
            android:text="Data początku" />
    </LinearLayout>

    <TextView
        android:id="@+id/event_list_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_row"
        android:text="Nazwa wydarzenia" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bottom_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_list_item_name" >

        <WebView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/webview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/event_list_item_content" />

        <TextView
            android:id="@+id/event_list_item_content"
            android:layout_width="@dimen/event_list_item_content_width"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Treść wydarzenia" />

    </RelativeLayout>

</RelativeLayout>